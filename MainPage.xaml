<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMI_Calc_App.MainPage">

    <ScrollView>
		<StackLayout>
			<Entry x:Name="weightEntry" Placeholder="Enter your weight in kg" />
			<Entry x:Name="heightEntry" Placeholder="Enter your height in cm" />
			<Button Text="Calculate Your BMI" Clicked="OnCalculateBMI" />
			<Label x:Name="resultLabel" />
		</StackLayout>
	</ScrollView>

</ContentPage>
